#!/bin/sh

DOT_FILE_NAMES=(
    ".gitconfig"
    ".gitignore_global"
    ".zshrc"
    ".zshrc.local"
    ".zshrc_aliases"
    "Brewfile"
)


link_dotfiles() {
    for filename in ${DOT_FILE_NAMES[@]}
    do
        ln -s -v $DOT_FILES_PATH/$filename $HOME/$filename
    done
}

unlink_dotfiles() {
    for filename in ${DOT_FILE_NAMES[@]}
    do
        dotfile=$HOME/$filename

        if [ -e $dotfile ]; then
            rm -rf -v $dotfile
        fi
    done
}

update_links() {
    echo "Removing symlinks..."
    unlink_dotfiles

    echo "Creating symlinks..."
    link_dotfiles
}
export -f update_links